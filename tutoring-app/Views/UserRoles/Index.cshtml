@model IEnumerable<tutoring_app.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>List of User Roles</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Email</td>
            <td>Roles</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.DisplayRoles()</td>
        </tr>
        }
    </tbody>
</table>
