@model IEnumerable<tutoring_app.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-sm">
            <h1 class="display-4">Schedule</h1>
            <p>
               Schedule your learning session today.
               You can pick any date and time that fits your schedule.
              
            </p>
            <div align="center">
                <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
            </div>
        </div>
        <div class="col-sm">
            <img src="~/img/calendar.jpg" width="500" alt="calendar icon" />
            
        </div>
    </div>
    <hr />
   
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
